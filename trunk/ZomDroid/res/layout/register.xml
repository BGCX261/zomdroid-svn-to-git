<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		
		<TextView
			
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:text="Phonenumber     "
			android:padding="10px"
			android:paddingLeft="0px"
		/>
		<EditText 
			android:text=""
			android:id="@+id/phoneNumber"
			android:layout_width="wrap_content" 
			android:layout_height="fill_parent"
			android:width = "150px"
			
		/>
		
		
	</LinearLayout>
	<LinearLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		
		<TextView
			
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:text="Insert Username "
			android:padding="10px"
			android:paddingLeft="0px"
		/>
		<EditText 
			android:text=""
			android:id="@+id/userID"
			android:layout_width="wrap_content" 
			android:layout_height="fill_parent"
			android:width = "150px"
			
		/>
		
		
	</LinearLayout>
	
	<LinearLayout android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
	<TextView
			android:id="@+id/gameIDText"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:text="Insert GameID     "
			android:padding="10px"
			android:paddingLeft="0px"
		/>
		<EditText 
			android:text="Available Games"
			android:id="@+id/gameID"
			android:layout_width="wrap_content" 
			android:layout_height="fill_parent"
			android:width = "150px"
			
		/>
		
	</LinearLayout>
   
   <LinearLayout android:layout_width="wrap_content" 
   	android:layout_height="wrap_content">
     <Spinner android:id="@+id/gameIDSpinner" 
   		android:layout_width="fill_parent" 
   		android:layout_height="wrap_content"
   		android:drawSelectorOnTop="true"
   		android:prompt="@string/gameList"
   	 />
   	 
   	<Button 
		android:gravity="right"
		android:text="Refresh" 
		android:id="@+id/refreshButton" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
	</Button>
	
   	</LinearLayout>
   	
	<RadioGroup android:layout_width="fill_parent" 
		android:padding="10px"
		android:layout_height="wrap_content" 
		android:orientation="vertical" 
		android:id="@+id/zhType">
	<TextView
		android:text="Choose a Side"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	/>
	
	<RadioButton 
		android:text="Human" 
		android:id="@+id/hRadioB" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
	</RadioButton>
	<RadioButton android:text="Zombie" 
		android:id="@+id/zRadioB" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
	</RadioButton>
	
</RadioGroup>
	
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center">
	<Button 
		android:gravity="center"
		android:text="Play Game" 
		android:id="@+id/playButton" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
	</Button>
	</LinearLayout>
</LinearLayout>

